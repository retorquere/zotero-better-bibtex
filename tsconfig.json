{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [ "es2017", "dom" ],
    "typeRoots": [
      "./content/typings",
      "./translators/typings",
      "./gen/typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "content/**/*",
    "translators/**/*",
    "zotero-webpack/**/*",
    "setup/**/*",
    "gen/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "typings"
  ]
}
