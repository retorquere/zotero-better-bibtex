      menupopup
        menuitem(data-l10n-id='better-bibtex_preferences_export_quick-copy_org-mode_zotero', value='zotero')
        menuitem(data-l10n-id='better-bibtex_preferences_export_quick-copy_org-mode_citekey', value='citationkey').

  html:div.bbt-preferences-quickcopy-details#bbt-preferences-quickcopy-details-selectlink
