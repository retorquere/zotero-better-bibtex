        menuitem(label='Jekyll cite', value='jekyll').


  html:div.bbt-preferences-quickcopy-details#bbt-preferences-quickcopy-details-latex
    label(
      bbt:preference='extensions.zotero.translators.better-bibtex.citeCommand'
      data-l10n-id='better-bibtex_preferences_export_quick-copy_latex_command'
    )
    html:input(preference='extensions.zotero.translators.better-bibtex.citeCommand', size='10', type='text')

  html:div.bbt-preferences-quickcopy-details#bbt-preferences-quickcopy-details-pandoc
    checkbox(
      data-l10n-id='better-bibtex_preferences_export_quick-copy_pandoc_brackets'
      native='true'
      preference='extensions.zotero.translators.better-bibtex.quickCopyPandocBrackets'
    )

  html:div.bbt-preferences-quickcopy-details#bbt-preferences-quickcopy-details-orgmode
    label(
      bbt:preference='extensions.zotero.translators.better-bibtex.quickCopyOrgMode'
      data-l10n-id='better-bibtex_preferences_export_quick-copy_org-mode'
    )
