        menuitem(data-l10n-id='better-bibtex_preferences_export_quick-copy_org-ref3', value='orgRef3')
        menuitem(data-l10n-id='better-bibtex_preferences_export_quick-copy_org-mode_cite', value='orgcite')
        menuitem(data-l10n-id='better-bibtex_preferences_export_quick-copy_org-mode', value='orgmode')
